<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>springmvc.mock</display-name>
  
  <servlet>
  	<servlet-name>mockServlet</servlet-name>
  	<servlet-class>com.learn.spring.framework.webmvc.servlet.MockDispatcherServlet</servlet-class>
  	<init-param>
  		<param-name>configLocation</param-name>
  		<param-value>app.properties</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>mockServlet</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>